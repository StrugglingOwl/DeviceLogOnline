<div class="col-md-4 col-md-offset-4">
    <h2>添加记录</h2>

    <hr>
    <%= form_for @record do |f| %>

    <% if @record.errors.any? %>
    <ul>
      <% @record.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
    <% end %>

    日期
    <%= f.select(:date, [Date.today] )  %>
    <br>
    房间号
    <br>
    <%= f.select(:room_id, ['3-1','3-2','3-3','3-4','3-5','3-6','3-7','3-8','3-9','3-10','4-1','4-2','4-3','4-4','4-5','4-6','4-7','4-8','4-9','4-10','4-11','4-12','4-13','4-14','4-15','4-16','3F导播室','4F导播室']) %>
    <br>
    设备名称
    <br>
    <%= f.text_field :device_name %>
    <br>
    型号
    <br>
    <%= f.text_field :device_model %>
    <br>
    序列号
    <br>
    <%= f.text_field :serial_number %>
    <br>
    故障简述
    <br>
    <%= f.text_area :summary %>
    <br>

    解决过程
    <br>
    <%= f.text_area :resolution %>
    <br>
    结果（ 0 代表待解决，1 代表已解决）
    <br>
    <%= f.select(:result, ['0','1']) %>
    <br>
    备注
    <br>
    <%= f.text_area :remarks %>
    <br>

    <%= f.submit "提交", :disable_with => 'Submiting...' %>
    <% end %>

</div>
